---
import Section from "../Section.astro";

import {skills} from "@cv"
---

<Section title="Habilidades">

    <ul>
        {
            skills.map(({name})=>(
                <li>
                    <span>{name}</span>
                    
                </li>
            ))
        }
    </ul>

</Section>


<style>

    ul{
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    li {
        border-radius: 7px;
        background: #dedede;
        color: black;
        font-size: 1.2rem;
        font-weight: 500;
        padding: 0.3rem 0.7rem;
    }


</style>